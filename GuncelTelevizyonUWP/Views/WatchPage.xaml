    <SplitView PanePlacement="Right" IsPaneOpen="{Binding IsChannelsMenuOpen}">
        <interactivity:Interaction.Behaviors>
            <core:EventTriggerBehavior EventName="PaneClosed">
                <core:InvokeCommandAction Command="{Binding PaneClosingCommand}"/>
            </core:EventTriggerBehavior>
        </interactivity:Interaction.Behaviors>
        <SplitView.Pane>
            <Grid Background="Red">
                <!-- TODO CHANNELS LISTING-->
            </Grid>
        </SplitView.Pane>
        <SplitView.Content>
            <MediaElement Source="{Binding CurrentSource}" AreTransportControlsEnabled="True">
                <MediaElement.TransportControls>
                    <MediaTransportControls IsCompact="True" Style="{StaticResource TransportStyle}" IsSeekBarVisible="False" />
                </MediaElement.TransportControls>
            </MediaElement>
        </SplitView.Content>
    </SplitView>
